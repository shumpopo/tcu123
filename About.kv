MDScreen:
    name: 'About'
    canvas.before:
        Rectangle:
            size: self.size
            source: "assets/about_md.jpg"
    MDFloatLayout:
        MDLabel:
            text: "DEVELOPERS"
            font_name: "fonts/little.otf"
            font_size: "25sp"
            halign: "center"
            pos_hint: {"center_y": .95}
            theme_text_color: "Custom"
            text_color: "white"

    MDIconButton:
        icon: "icons/back_blue.png"
        pos_hint: {'center_y': 0.95}
        on_release:
            root.manager.transition.direction = "right"
            root.manager.current = "Profile-screen"

    Image:
        source: "assets/TCUlogo.jpg"
        size_hint: 1, 1
        pos_hint: {'center_x': 0.5,'center_y': .5}
        opacity: 0.5

    ScrollView:
        size_hint_y: .9
        do_scroll_x: False
        do_scroll_y: True

        MDBoxLayout:
            orientation: 'vertical'
            size: (root.width, root.height)
            width: self.minimum_width
            size_hint: None, None
            cols: 1
            spacing : 15
            MDFloatLayout:
                size_hint: 1,.01
            MDBoxLayout:
                orientation: "vertical"
                pos_hint: {"center_x": 0.5,"center_y": 1}
                size_hint: .9,.13

                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 0.65
                    BoxShadow:
                        pos: self.pos
                        size: self.size
                        offset: 0, -5
                        blur_radius: 25
                        spread_radius: -10, -10
                        border_radius: 10, 10, 10, 10
                canvas:
                    Color:
                        rgba: 1, 1, 1, 1
                    RoundedRectangle:
                        pos: self.pos
                        size: self.size
                        radius: [20]

                MDFloatLayout:
                    MDLabel:
                        text: "Halasan, Merjery M."
